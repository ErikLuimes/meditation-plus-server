{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commitment creation</h1>

    <form action="{{ path('commitment_create') }}" class="form-horizontal" method="post">
        <div class="row">
            <div class="col-md-8">
                {{ form_widget(form) }}

                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="form-actions" id="submit">
                            <a href="{{ path('commitment') }}" class="btn btn-default">
                                Back to the list
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-check"></i> Submit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
