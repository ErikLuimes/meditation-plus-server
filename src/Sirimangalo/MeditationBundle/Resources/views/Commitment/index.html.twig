{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>
            Commitments

            <div class="pull-right">
                <a href="{{ path('commitment_new') }}" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Create new commitment
                </a>
            </div>
        </h1>
    </div>

    {% for item in mine %}
        <div class="bs-callout bs-callout-success">
            <h4>{{ item.title }}</h4>

            <p>{{ item.description }}</p>

            <p>
                <form action="{{ path('commitment_uncommit', {'id': item.id}) }}" method="post">
                    <input type="hidden" name="token" value="{{ commitmentToken }}">
                    <button type="submit" class="btn btn-default">
                        Uncommit
                    </button>
                </form>
            </p>
        </div>
    {% endfor %}

    {% for item in others %}
        <div class="bs-callout bs-callout-info">
            <h4>{{ item.title }}</h4>

            <p>{{ item.description }}</p>

            <p>
                <form action="{{ path('commitment_commit', {'id': item.id}) }}" method="post">
                    <input type="hidden" name="token" value="{{ commitmentToken }}">
                    <button type="submit" class="btn btn-default">
                        Commit
                    </button>
                </form>
            </p>
        </div>
    {% endfor %}
{% endblock %}
